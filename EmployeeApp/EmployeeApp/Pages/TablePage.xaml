<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="EmployeeApp.Pages.TablePage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="false"
             BackgroundImageSource="bgApp.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackLayout
           Grid.Row="0"
           Grid.RowSpan="1"
           Grid.Column="0"
           Grid.ColumnSpan="3">
            <Frame
                    Margin="0,0,0,0"
                    BackgroundColor="White">
                <Frame.Content>
                    <StackLayout>
                        <Label
                               
                                LineBreakMode="WordWrap"
                                FontSize="40"
                                HorizontalTextAlignment="Center"
                                
                                Text="Tables"/>

                    </StackLayout>
                </Frame.Content>
            </Frame>
        </StackLayout>
        <StackLayout
                            Grid.Row="0"
                            Grid.RowSpan="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="1">


            <Button             Margin="10"
                                Text="Log Out"
                                x:Name="logOut"
                                Clicked="LogOut_Clicked"
                                BackgroundColor="red"
                                TextColor="White">

            </Button>

        </StackLayout>
        <StackLayout
           HorizontalOptions="FillAndExpand"
        VerticalOptions="End"
           Grid.Row="1"
           Grid.RowSpan="4"
           Grid.Column="0"
           Grid.ColumnSpan="3">

            <ScrollView>
                <StackLayout>
                    <Button 
                        Margin="10"
                        x:Name="Table1"
                        Text="Table 1"
                        BackgroundColor="Blue"       
                        TextColor="White"
                        Clicked="Table1Clicked"
                        ></Button>

                    <Button 
                        Margin="10"
                        x:Name="Table2"
                        Text="Table 2"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table3"
                        Text="Table 3"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table4"
                        Text="Table 4"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table5"
                        Text="Table 5"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table6"
                        Text="Table 6"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table7"
                        Text="Table 7"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table8"
                        Text="Table 8"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table9"
                        Text="Table 9"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                    <Button 
                        Margin="10"
                        x:Name="Table10"
                        Text="Table 10"
                        BackgroundColor="Gray"
                        TextColor="Black"
                        Clicked="Table2Clicked"
                        ></Button>
                   

                </StackLayout>
            </ScrollView>
            
        </StackLayout>

    </Grid>
</ContentPage>
